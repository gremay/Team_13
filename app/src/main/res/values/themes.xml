<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.DealMyMeal" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/green</item>
        <item name="colorOnSecondary">@color/green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionModeBackground">@color/green</item>
        <item name="actionModeCloseDrawable">@drawable/ic_close</item>

        <item name="dashboard_bg">@drawable/ic_background_dashboard</item>
        <item name="add_meal_edit_bg">@color/edit_light</item>
        <item name="meal_item_txt">@color/light_gray</item>
        <item name="overview_item_bg">@color/ic_card_bg_l</item>
        <item name="overview_item_1">@drawable/ic_background_meal_orange</item>
        <item name="overview_item_2">@drawable/ic_background_meal_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DealMyMeal.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DealMyMeal.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.DealMyMeal.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomRatingBarMeals" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_rating_meals</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>

    <style name="CustomRatingBarDays" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/ic_custom_rating_days</item>
        <item name="android:minHeight">50dip</item>
        <item name="android:maxHeight">50dip</item>
    </style>
</resources>